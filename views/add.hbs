<h1>Add course</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Name is required"></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="text" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Price is required"></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">URL</label>
        <span class="helper-text" data-error="URL is required"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}"/>

    <button class="btn btn-primary">Add</button>
</form>
